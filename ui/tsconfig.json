{
  "compilerOptions": {
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true, //automatically generate declaration files
    "declarationDir": "dist",
    "outDir": "dist",
    "removeComments": false,
    "strict": true,
    "declarationMap": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "skipLibCheck": true,
    "paths": {
      // "@/*": ["src/*"],
      "@nutui-types/*": ["../node_modules/@nutui/nutui/dist/types/__VUE/*"]
    }
  },
  "include": [
    "*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
